<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
    
    <servlet>
        <servlet-name>LecturerTimetableController</servlet-name>
        <servlet-class>controller.TimetableController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LecturerTimetableController</servlet-name>
        <url-pattern>/lecturer/timetable</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>reportAttendance</servlet-name>
        <servlet-class>controller.reportAttendance</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Check_attendance</servlet-name>
        <servlet-class>controller.Check_attendance</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reportAttendance</servlet-name>
        <url-pattern>/student/reportAttendance</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Check_attendance</servlet-name>
        <url-pattern>/lecture/Check_attendance</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
